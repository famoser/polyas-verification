{
  "type": "project",
  "name": "famoser/polyas-verification",
  "description": "verify the internet voting system POLYAS",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "ext-bcmath": "*",
    "ext-gmp": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-zip": "*",
    "famoser/pdf-generator": "^0.5.0",
    "guzzlehttp/guzzle": "^7.0",
    "paragonie/ecc": "v2.3.0",
    "monolog/monolog": "^3.3",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.11",
    "sop/asn1": "^4.1",
    "symfony/dotenv": "^6.2",
    "symfony/yaml": "^6.2"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.8",
    "famoser/agnes": "^4.0",
    "friendsofphp/php-cs-fixer": "^3",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    }
  },
  "autoload": {
    "psr-4": {
      "Famoser\\PolyasVerification\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Famoser\\PolyasVerification\\Test\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "vendor/bin/cghooks update"
    ],
    "post-update-cmd": [
      "vendor/bin/cghooks update"
    ],
    "stan": "phpstan analyse --no-progress --ansi --xdebug",
    "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --display-deprecations",

    "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "./vendor/bin/php-cs-fixer fix",
        "npm run lint",
        "npm run format",
        "npm run types:check",
        "git update-index --again"
      ],
      "post-merge": [
        "composer install",
        "npm install"
      ]
    }
  }
}
